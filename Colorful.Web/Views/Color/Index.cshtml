@model Colorful.Web.Models.ColorIndexViewModel

<style>
    .serverGrid {
        display: grid;
        grid-auto-flow: row;
        grid-template-columns: 33% 34% 33%;
        justify-items: center;
        grid-gap: 1rem;
    }

    .serverGrid > a {
        color: black;
        text-decoration: none;
    }

    img {
        border-radius: 15%;
    }

    .row {
        padding-bottom: 1em;
    }
</style>

<div class="col-12">
    <div class="row justify-content-center">
        <h1>Choose a Server</h1>
    </div>

    <div class="row justify-content-center">
        
        <div class="container serverGrid">
            @foreach (var server in Model.Guilds)
            {
                <a href="/color/guild/@server.Id">
                    <div>
                        <div class="d-flex justify-content-center">
                            <img src="@server.IconUrl" />
                        </div>
                        <div>
                            <span>@server.Name</span>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
